#!/usr/bin/env bash
#
# Copyright (c) 2023 StreamNative, Inc.. All Rights Reserved.
#

APP_HOME=`cd $(dirname $0)/..; pwd`
LIB_DIR=${APP_HOME}/lib
CONF_DIR=${APP_HOME}/conf
LOG_FILE=${CONF_DIR}/log4j2.properties

# Check for the java to use
if [[ -z $JAVA_HOME ]]; then
    JAVA=$(which java)
    if [ $? != 0 ]; then
        echo "Error: JAVA_HOME not set, and no java executable found in $PATH." 1>&2
        exit 1
    fi
else
    JAVA=$JAVA_HOME/bin/java
fi

add_maven_deps_to_classpath() {
    MVN="mvn"
    if [ "$MAVEN_HOME" != "" ]; then
	    MVN=${MAVEN_HOME}/bin/mvn
    fi

# Need to generate classpath from maven pom. This is costly so generate it
# and cache it. Save the file into our target dir so a mvn clean will get
# clean it up and force us create a new one.
    f="${APP_HOME}/target/classpath.txt"
    if [ ! -f "${f}" ]
    then
	    ${MVN} -f "${APP_HOME}/pom.xml" dependency:build-classpath -DincludeScope=compile -Dmdep.outputFile="${f}" &> /dev/null
    fi
    CLASSPATH=${CLASSPATH}:`cat "${f}"`
    for j in `ls ${APP_HOME}/target/*.jar`; do
        CLASSPATH="${CLASSPATH}:${j}"
    done
}

if [ -d "${LIB_DIR}" ]; then
    for lib in `ls ${LIB_DIR}`; do
        CLASSPATH="${CLASSPATH}:${LIB_DIR}/${lib}"
    done
else
    add_maven_deps_to_classpath
fi

OPTS="${OPTS} -Dlog4j.configurationFile=${LOG_FILE}"

exec ${JAVA} -cp ${CLASSPATH} ${OPTS} org.example.Main $@

